<section class="panel">
	<div class="twt-feed blue-bg">
		<h1>{{ item.title | raw }}</h1>
		<p>{{ item.description | raw }}</p>
		{%  if item.photo %}
			<a href="{{ item.link }}">
				<img src="{{ item.photo | imagine_filter('thumbs') }}" alt="image"/>
			</a>
		{% endif %}
	</div>
	<div class="weather-category twt-category">
		<ul>
			<li>
				<h5>{{ item.infos[0].value | raw }}</h5>
				{{ item.infos[0].title | raw }}
			</li>
			<li>
				<h5>{{ item.infos[1].value | raw }}</h5>
				{{ item.infos[1].title | raw }}
			</li>
			<li>
				<h5>{{ item.infos[2].value | raw }}</h5>
				{{ item.infos[2].title | raw }}
			</li>
		</ul>
	</div>
</section>